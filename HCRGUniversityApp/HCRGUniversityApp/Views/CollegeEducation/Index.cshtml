                                    <div class="col-7 paddingright5 btm5">
                                        <a class="no-margin font-22 color-grey">
                                              <a class="link-course-name no-margin font-22 color-grey course-name " data-bind="text:CourseName"></a>
                                        </a>
                                        <br />
                                        <span class="color-light-grey textjustify" data-bind="text:CourseDescription" ></span>
                                    </div>

                                    <div class="col-2 btm5">
                        
                                            <span class="font-16 " data-bind="text:CourseCode"></span>
                      
                                    </div>

                                    <div class="col-1 btm5"><span class="font-16 " data-bind="text:CourseTime"></span></div>

                                    <div class="col-1 btm5">
                                                <!--ko if:CoursePrice() == 0-->
                                                        <span class="font-16">FREE</span>
                                                <!--/ko-->
                                                <!--ko if:CoursePrice() != 0-->
                                                        <span class="font-16" data-bind="text:'$'+(CoursePrice.extend({numeric:2})())"></span>
                                                <!--/ko-->
                                            


                                    </div>

                                  @*  <div class="col-1 btm5">  <!--ko if:EducationFormatImagePath!= null-->
                                                        <!-- ko foreach:EducationFormatImagePath -->
                                                        <a href="#">
                                                            <img data-bind="attr:{src:EducationFormatImagePath1}" class=" marginright10" />
                                                        </a>
                                                        <!--/ko-->
                                                        <!--/ko--></div>*@
 
                                    <div class="col-1 top10 course-row"><a href="#" class="learn-more">Learn More</a></div>
                              </div>
                        </div>
                    <!--/ko-->
                <!--/ko-->
          <nav class="margin-left">
              @Html.Partial("~/Views/Shared/_Paging.cshtml")
          </nav>
            <!--/ko-->
         
          <!--ko if:EducationdetailResults()== null || EducationdetailResults().length==0  -->
          <div class="alert alert-info" id="EmptyGrid" style="margin-top: 10px; display:none;">
                            No Courses Found
          </div>
          <!--/ko-->
       </div>
     </div>
    
</div>

</div>
@section scripts{
    <script src="@Url.Content("~/Scripts/knockout/viewmodel/views/CollegeEducation/CollegeEducationGridViewModel.js")"></script>
  
    <script src="~/Scripts/knockout/ko.pager.js"></script>
    <script src="@Url.Content("~/Scripts/knockout/custom/knockout.custom-extenders.js")"></script>
    <script type="text/javascript">
        var model = @MvcHtmlString.Create(new JavaScriptSerializer().Serialize(Model));
        var collegeeducationGridViewModel = new CollegeEducationGridViewModel();
        collegeeducationGridViewModel.Init(model);
        ko.applyBindings(collegeeducationGridViewModel, $("#divCollegeEducation").get(0));
    </script>
}
