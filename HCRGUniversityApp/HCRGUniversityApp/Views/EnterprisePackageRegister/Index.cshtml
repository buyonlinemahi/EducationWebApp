@using System.Web.Script.Serialization
@using HCRGUniversityApp.Infrastructure.Global;
@{
    ViewBag.Title = "Index";
}


<div id="divEnterprisePackageRegister">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <header class="textcenter">
                    <h2><strong>Save with our Enterprise Package</strong></h2>
                </header>
            </div>
            <!-- col-sm-12 -->
        </div>
        <!-- row -->
        <div class="row">
            @using (Html.BeginForm(GlobalConst.Actions.EnterprisePackageRegisterController.AddEnterprisePackageRegister , GlobalConst.Controllers.EnterprisePackageRegister, System.Web.Mvc.FormMethod.Post, new
                        {
                            id = "frmAddEnterprisePackageRegister",
                            enctype = "multipart/form-data",
                            data_bind = "ajaxForm:{ success: function(responseText, statusText,xhr ,$form){ AddEnterprisePackageRegisterDetailSuccess(responseText)},beforeSubmit: AddEnterprisePackageRegisterInfoFormBeforeSubmit ,clearForm : true }"
                        }))
            {


                <div class="col-sm-12 margintop20">
                    <p class="fontsize14 textjustify">At <span class="spanWebsiteName1"></span> we understand that every business is unique in budget and size, we therefore developed a unique package solution. We invite you to provide basic information and an All-Access Enterprise Package representative will contact you as soon as possible with a quote tailored specifically to your training needs. <span class="spanWebsiteName1"></span> is committed to offering the best value in Workers' Compensation education. </p>

                    <p class="fontsize14 textjustify">    For immediate assistance please give our representatives a call at (714) 249-7920</p>
            <h3><strong>Contact Information</strong></h3>
            <div class="clearfix margintop20">
                        <div class="clearfix">
                            <div class="form-group col-md-6 paddingleft-none">
                                <label class="glyphicon glyphicon-user"><span class="smalltext"> Name </span></label> 
                                <input type="text" name="EPRName" required="required" data-bind="value:EPRName,jqBootstrapValidation: {}" maxlength="50" class="form-control set-padding" placeholder="First & Last Name">
                                <input type="hidden" name="EPRID" data-bind="value:EPRID" id="hfEPRID">
                            </div>
                                <div class="form-group col-md-6 paddingleft-none">
                                <label class="glyphicon glyphicon-envelope"><span class="smalltext"> Email Address</span></label>
                                <input type="email" id="emailIDExists" class="form-control set-padding" required="required"
                                       maxlength="50" name="EPREmail" placeholder="Email Address" data-bind="value:EPREmail,jqBootstrapValidation: {}" />
                            </div>
                            
                        </div>


                        <div class="clearfix">
                           <div class="form-group col-md-6 paddingleft-none" >
                                <label class="glyphicon glyphicon-earphone"><span class="smalltext"> Phone Number </span></label>
                                <input type="text" name="EPRPhone" class="form-control set-padding phonemask" required="required" placeholder="Phone Number" maxlength="14"  data-bind="value:EPRPhone,jqBootstrapValidation: {}">
                            </div>

                            <div class="form-group col-md-6 paddingleft-none">
                                <label class="glyphicon glyphicon-briefcase "><span class="smalltext"> Company Name</span></label>
                                <input type="text" class="form-control set-padding " maxlength="50" data-bind="value:EPRCompany" name="EPRCompany" placeholder="Company Name" />
                            </div>
                        </div>
                    </div>
<br/>
<br/>
<br/>
                        <div class="form-group">
                            <button type="submit" class="submit-btn-2 adjust-margin pleft" name="signup" value="Submit">Get Custom Quote</button>
                        </div>
               
                    

                </div>
            }
            <!-- col-sm-6 -->
            <!-- col-sm-5 -->
        </div>
        <!-- row -->
    </div>
    <!-- container -->
</div>


@section scripts{
    <script src="@Url.Content("~/Scripts/knockout/viewmodel/views/EnterprisePackageRegister/EnterprisePackageRegisterDetailViewModel.js")"></script>
 
    <script src="~/Scripts/knockout/ko.pager.js"></script>
    <script src="@Url.Content("~/Scripts/knockout/custom/knockout.custom-extenders.js")"></script>
    <script src="~/Scripts/jquery.maskedinput.min.js"></script>

    <script type="text/javascript">
        var model = @MvcHtmlString.Create(new JavaScriptSerializer().Serialize(Model));
        var _enterprisePackageRegisterDetailViewModel = new EnterprisePackageRegisterDetailViewModel();
        _enterprisePackageRegisterDetailViewModel.Init(model);
        ko.applyBindings(_enterprisePackageRegisterDetailViewModel, $("#divEnterprisePackageRegister").get(0));
    </script>
}