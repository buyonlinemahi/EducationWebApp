@using System.Web.Script.Serialization
@using HCRGUniversityMgtApp.Infrastructure.Global;

@{
    ViewBag.Title = "_NewsSectionCarouselPartial";
}

  <!--start row -->
<div id="divNewsSectionCarousel">
    <form>
        <div class="panel-wrapper">
            <div class="panel panel-default">
                <!-- Default panel contents -->
                <div class="panel-heading">Search News Title</div>        
                <div class="row mtb-20">
                    <div class="col-md-2 col-sm-2 padd-0"><label> Title:</label> <a href="#" class="inner-content-link"> </a></div>
                    <div class="col-md-8 col-sm-8">
                        <div class="form-group">
                            <input type="text" name="searchText" id="SearchNewsTitle" class="form-control" data-bind="jqBootstrapValidation: {}" placeholder="Search News" required="required">
                        </div>
                        </div>
                        <div class="col-md-2 col-sm-2 padd-0">
                        <a href="#" class="btn btn-default pul-rht-r" id="SearchCrouselNews" data-bind="click:$root.OpenNewsArticle">Search</a>
                  </div>
                </div>
                <div class="panel-body">
                    <div class="panel panel-default">
                        <div class="panel-heading">News Section Items</div>
                        <!-- Table -->
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Section</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!--ko if:NewsDataResult!= null-->
                                <!-- ko foreach:NewsDataResult -->
                                <tr>
                                    <td><span data-bind="text:NewsTitle" />
                                        <input type="hidden" name="hdNewsID" id="hdfNewsID" data-bind="value:NewsID" /></td>
                                    <td><span data-bind="text:NewsSectionTitle" /></td>                                 
                                    <td><a href="#" class="inner-content-link blue"  style="color:#808080;" data-bind="click:$root.SelectNewsCarousel">Select</a></td>
                                </tr>
                                <!--/ko-->
                                <!--/ko-->
                            </tbody>
                        </table>
                    </div>
                </div>


            </div>
        </div>
    </form>
    <!-- row-end -->
</div><!-- /inner-wrapper -->