@{
    ViewBag.Title = "Encryption";
}
@section header{
    <a class="navbar-brand" href="#">Encryption </a>
}
<div class="inner-content">
    <!--start row -->
    <div class="row">
        <div class="panel-wrapper">
            <div class="panel panel-default">
                <div id="divConvert">
                    <div class="panel-body">
                        <div class="col-md-3">
                            <label>Input data:</label>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <input name="inputdata" type="text" id="txtInput" class="form-control" data-bind="value:inputdata,jqBootstrapValidation: {}">
                            </div>
                        </div>
                    </div>
                    <div class="panel-body text-right">
                        <button type="submit" class="btn btn-default" data-bind="click:ConvertFieldValue ">Encrypt Text</button>
                    </div>

                    <div class="panel-body">
                        <div class="col-md-3">
                            <label>Encrypted Text:</label>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <input name="Encrypted Text" type="text" id="txtEncryptedText" class="form-control" data-bind="value:EncryptedText,jqBootstrapValidation: {}">
                            </div>
                        </div>
                    </div>

                    <div class="panel-body text-right">
                        <button type="submit" class="btn btn-default" data-bind="click:DecryptFieldValue ">Decrypted Data</button>
                    </div>

                    <div class="panel-body">
                        <div class="col-md-3">
                            <label>Decrypt Text:</label>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <input name="DecryptText" type="text" id="txtDecryptText" class="form-control" data-bind="value:DecryptText,jqBootstrapValidation: {}">
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div id="divscrollnew"></div>
    <!-- row-end -->
</div>

@section scripts{
    <script src="~/Scripts/jquery-ui.min.js"></script>
    <script src="~/Scripts/knockout/viewmodel/views/Tool/ToolViewModel.js"></script>
    <script src="~/Scripts/Plugin/Jquery.checkNumericNumbers.js"></script>
    <script src="@Url.Content("~/Scripts/jquery.tmpl.js")"></script>
    <script type="text/javascript">
        var model = @MvcHtmlString.Create(new System.Web.Script.Serialization.JavaScriptSerializer().Serialize(Model));
        var toolViewModel = new ToolViewModel(model);
        ko.applyBindings(toolViewModel, $("#divConvert").get(0));     
    </script>
}

